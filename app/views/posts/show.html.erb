<h2>
    <%= @post.title %>
</h2>
<p>
    <%= @post.body %>
</p>

<% if @post.comments.any? %>
<h3>コメント</h3>
<ul>
    <% @post.comments.each do |comment|%>
    <li>
        <%= comment.body %>
        <%= link_to "[削除]", 
        post_comment_path(@post, comment), 
        method: :delete, 
        class: 'command', 
        data: {confirm: '本当に削除しますか？'} %>
    </li>
    <% end %>
</ul>
<% end %>

<h3>コメントを書く</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
    <%= f.text_field :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>